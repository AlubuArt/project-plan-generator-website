{
    "name": "vibe-code-prject-plan-website",
    "version": "0.1.0",
    "private": true,
    "description": "Turn any idea into a project plan in 60 seconds",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "tsc --noEmit",
        "build-mcp": "tsc --project tsconfig.mcp.json && mv dist/mcp-server.js dist/mcp-server.mjs && mv dist/mcp-client-test.js dist/mcp-client-test.mjs && chmod +x dist/mcp-server.mjs && chmod +x dist/mcp-client-test.mjs",
        "mcp-server": "npm run build-mcp && node dist/mcp-server.mjs",
        "mcp-test": "npm run build-mcp && node dist/mcp-client-test.mjs dist/mcp-server.mjs"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.12.1",
        "@tailwindcss/typography": "^0.5.16",
        "next": "^14.0.4",
        "openai": "^4.20.1",
        "pako": "^2.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remark": "^15.0.1",
        "remark-gfm": "^4.0.0",
        "remark-html": "^16.0.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@types/pako": "^2.0.3",
        "@types/react": "^18.2.46",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.0.4",
        "eslint-config-prettier": "^9.1.0",
        "postcss": "^8.4.32",
        "prettier": "^3.2.4",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}